ng-container('*ngIf'="user$ | async as user")
  lc-welcome('*ngIf'="user.isNew; else mainApp", '(done)'="markUserAsNotNew($event)")

  ng-template(#mainApp)

    lc-view-switcher('[view]'="view", '(changed)'="setView($event)")

    p YearOfBirth: {{yearOfBirth}}
    p Years: {{age}}
    p Country: {{user.country}}
    p Prediction: {{lifeExpectancy}}
    p YearOfDeath: {{yearOfDeath}}

    lc-calendar('[yearOfBirth]'="yearOfBirth",
                '[lifeExpectancy]'="lifeExpectancy",
                '[yearOfDeath]'="yearOfDeath",
                '[age]'="age",
                '[percentageLivedSoFar]'="percentageLivedSoFar",
                '[today]'="today",
                '[view]'="view")
    button.button('(click)'="clearStorage()") RESET
