ng-container('*ngIf'="user$ | async as user")
  lc-welcome('*ngIf'="user.isNew; else mainApp", '(done)'="markUserAsNotNew()")

  ng-template(#mainApp)
    //  p YearOfBirth: {{user.yearOfBirth}}
