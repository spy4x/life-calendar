.view.view--timeline
  .timeline.is-centered

    ng-container('*ngFor'="let item of getItems()")
      ng-container('*ngIf'="item.type==='archive'")
        .timeline-item('[ngClass]'="getClass(item)")
          .timeline-marker('[ngClass]'="getClass(item)")
          .timeline-content
            h2 {{item.age}}
            p.timeline--desc {{item.desc}}

      ng-container('*ngIf'="item.type==='terminator'")
        ng-container('*ngIf'="item.age!==0")
          .timeline-item('[ngClass]'="getClass(item)")
            .timeline-content
          .timeline-item('[ngClass]'="getClass(item)")
            .timeline-content
        header.timeline-header
          span.tag('[ngClass]'="getClass(item)") {{item.desc}}
        ng-container('*ngIf'="item.age===0")
          .timeline-item('[ngClass]'="getClass(item)")
            .timeline-content
          .timeline-item('[ngClass]'="getClass(item)")
            .timeline-content

      ng-container('*ngIf'="item.type==='event'")
        .timeline-item('[ngClass]'="getClass(item)")
          .timeline-content
        .timeline-item('[ngClass]'="getClass(item)")
          .timeline-content
        header.timeline-header
          span.tag('[ngClass]'="getClass(item)") {{item.desc}}
        ng-container('*ngIf'="age < lifeExpectancy || item.age !== age")
          .timeline-item('[ngClass]'="getClass(item)")
            .timeline-content
          .timeline-item('[ngClass]'="getClass(item)")
            .timeline-content


