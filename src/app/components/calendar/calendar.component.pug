.view.view--timeline
  .timeline.is-centered
    header.timeline-header.is-primary
      span.tag.is-medium.is-primary Born: {{yearOfBirth}}
    .timeline-item.is-danger
      //.timeline-marker.is-danger
    //.timeline-item
    .timeline-item('*ngFor'="let dead of getYoungerDead()")
      .timeline-marker
      .timeline-content
        p.heading {{dead.name}}, {{dead.age}}
        p.timeline--desc {{dead.desc}}

    //span.timeline-item
    //  p.timeline-content {{dead}}
    header.timeline-header
      span.tag.is-warning Now: {{age}} years
    .timeline-item.is-danger
    .timeline-item('*ngFor'="let dead of getOlderDead()")
      .timeline-marker
      .timeline-content
        p.heading {{dead.name}}, {{dead.age}}
        p.timeline--desc {{dead.desc}}
    header.timeline-header
      span.tag.is-danger {{getAge50Year()}} - You're almost done with your life
    .timeline-item.is-primary
      //.timeline-marker.is-danger.is-icon
      //  i.fa.fa-flag
      //.timeline-content
      //  p.heading {{getAge50Year()}} - You still ended with life
      //  p You still ended with life
    header.timeline-header
      span.tag.is-medium.is-primary Death: {{yearOfDeath}}


