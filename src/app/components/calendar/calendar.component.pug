button.button.is-success.system-button.system-button-top-left('(click)'="refreshItems()") More 🏆

.view.view--timeline
  .timeline.is-centered
    header.timeline-header.is-primary
      span.tag.is-medium.is-primary {{yearOfBirth}} - Born 👶
    .timeline-item
    .timeline-item.is-primary('*ngFor'="let dead of getYoungerAge()")
      .timeline-marker.is-primary
      .timeline-content
        h2 {{dead.age}}
        p.timeline--desc {{dead.desc}}
    .timeline-item.is-primary
      .timeline-content
    .timeline-item.is-primary
      .timeline-content
    header.timeline-header
      span.tag.is-success {{today | date: 'yyyy'}} - {{age}} years old 😎
    .timeline-item.is-success
      .timeline-content
    .timeline-item.is-success('*ngFor'="let dead of getOlderAge()")
      .timeline-marker.is-success
      .timeline-content
        h2 {{dead.age}}
        p.timeline--desc {{dead.desc}}
    .timeline-item.is-success
      .timeline-content
    .timeline-item.is-success
      .timeline-content
    header.timeline-header
      span.tag.is-warning {{yearOfBirth + notEffectiveAge}} - {{notEffectiveAge}} years old - Retirement 👴🏽
    .timeline-item.is-warning
      .timeline-content
    .timeline-item.is-warning('*ngFor'="let dead of getOlderNotEffective()")
      .timeline-marker.is-warning
      .timeline-content
        h2 {{dead.age}}
        p.timeline--desc {{dead.desc}}
    .timeline-item.is-danger
      .timeline-content
    .timeline-item.is-danger
      .timeline-content
    header.timeline-header
      span.tag.is-danger {{yearOfDeath}} - {{lifeExpectancy}} years old - Life expectancy 💀


